# Pizza Platform Backend Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pizza-platform
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/pizza-platform

# Email Configuration (Brevo SMTP)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USER=your-brevo-email@smtp-brevo.com
EMAIL_PASS=your-brevo-api-key

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Session Configuration
SESSION_SECRET=your-very-long-random-session-secret-at-least-32-characters

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-for-tokens

# Rate Limiting
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_2FA=10
RATE_LIMIT_WINDOW=900000

# Email From Address
EMAIL_FROM=noreply@pizzaplatform.com

# Admin Authentication (REQUIRED)
ADMIN_JWT_SECRET=admin-jwt-secret-change-this-in-production-very-secure-key-2024

# Google Maps API (REQUIRED)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Blockchain Configuration (REQUIRED)
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
SOLANA_RPC_ENDPOINT_TESTNET=https://api.testnet.solana.com
SOLANA_NETWORK=devnet
WALLET_MASTER_KEY=wallet-master-encryption-key-change-this-for-production-security-2024
SPL_TOKEN_MINT=So11111111111111111111111111111111111111112
PIZZA_TOKEN_MINT=So11111111111111111111111111111111111111112

# Jupiter Integration
JUPITER_QUOTE_API=https://quote-api.jup.ag/v6
JUPITER_SWAP_API=https://quote-api.jup.ag/v6/swap

# KYC Configuration
KYC_PROVIDER=synapse
KYC_CLIENT_ID=your-kyc-client-id
KYC_CLIENT_SECRET=your-kyc-client-secret
KYC_SANDBOX=true

# Compliance Settings
MAX_DAILY_AMOUNT_TIER1=1000
MAX_DAILY_AMOUNT_TIER2=10000
VAULT_WITHDRAWAL_LIMIT_PERCENT=20

# MongoDB URI (CRITICAL: Change default credentials)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database 